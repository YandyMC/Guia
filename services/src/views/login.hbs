<div class="container mt-4 py-4">
    <div class="row">
        <div class="col-md-6">
            <img src="../img/logo-uleam.png" alt="" class="card-img mx-auto">
        </div>
        <div class="col-md-6">
            <div class="card p-4">
                <h5 class="text-center">
                    {{#if error}}
                        {{error}}
                    {{/if}}
                </h5>
                <form action="/user/login" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Ingrese su identificacion" name="username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Ingrese su clave" name="password">
                    </div>
                    <button class="btn btn-info btn-block" type="submit">Iniciar Sesion</button>
            </form>
            </div>
        </div>
    </div>
</div>