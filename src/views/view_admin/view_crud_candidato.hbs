<div class="container mt-4 py-4">
    <div>
        <a href="/view/admin_form_candidato" class="btn btn-primary">Nuevo</a><hr>
    </div>
    <div class="row">
        <div class="col-md-11 mx-auto">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Logo</th>
                        <th>Lista</th>
                        <th>Partido</th>
                        <th>Lider</th>
                        <th colspan="3">Acciones</th>
                    </tr>
                </thead>
            {{#each candidatos}}
                <tbody>
                    <tr>
                        <td>
                            <img src="{{this.logoDePartido}}" alt="" class="w-100">
                        </td>
                        <td>{{this.numeroDeLista}}</td>
                        <td>{{this.nomDePartido}}</td>
                        <td>{{this.nomCanPres}}</td>
                        <td class="m-1 p-2">
                            <a href="/view/admin_update_candidato/{{_id}}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                            <a href="/view/admin_delete_candidato/{{_id}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            <a href="" class="btn btn-success"><i class="fas fa-eye"></i></a>
                        </td>    
                    </tr>
                </tbody>
            {{else}}
                <div class="col-md-10 mx-auto">
                    <div class="card card-body text-center p-4">
                        <h4>No hay partidos politicos registrados aun</h4><hr>
                    </div>
                </div>
            {{/each}}
            </table>
        </div>
    </div>
</div>